                            {% if category.folders_count > 0 %}
                                <li>
                                    <a class="pix-solution-card" href="{{category.url}}">
                                        <div
                                            class="pix-solution-card__icon pix-solution-card__icon--{{ category.id }}"
                                        ></div>
                                        <h3 class="pix-solution-card__title">
                                            {{ category.name }}
                                        </h3>
                                        <p class="pix-solution-card__description">
                                            {{ category.description }}
                                        </p>
                                    </a>
                                </li>
                            {% endif %}
                        {% endif %}
                    {% endfor %}
                </ul>
                <hr>
                <ul class="pix-section-card__list">
                    {% for category in portal.solution_categories %}
                        {% if category.id == 15000003813 %}
                            {% if category.folders_count > 0 %}
                                <li>
                                    <a class="pix-solution-card" href="{{category.url}}">
                                        <div
                                            class="pix-solution-card__icon pix-solution-card__icon--{{ category.id }}"
                                        ></div>
                                        <h3 class="pix-solution-card__title">
                                            {{ category.name }}
                                        </h3>
                                        <p class="pix-solution-card__description">
                                            {{ category.description }}
                                        </p>
                                    </a>
                                </li>
                            {% endif %}
                        {% endif %}
                    {% endfor %}
                </ul>
                <hr>
                <h3 class="pix-section-card__title">
                    <img
                        src="https://storage.gra.cloud.ovh.net/v1/AUTH_27c5a6d3d35841a5914c7fb9a8e96345/pix-help-center/images/drapeau-be_pix-faq.svg"
                        alt="Fédération Wallonie-Bruxelles"

                    >Pour les utilisateurs de la Fédération Wallonie-Bruxelles
                </h3>
                <ul class="pix-section-card__list">
                    {% for category in portal.solution_categories %}
                        {% if category.id == 15000004613 %}
                            {% if category.folders_count > 0 %}
                                <li>
                                    <a class="pix-solution-card" href="{{category.url}}">
                                        <div
                                            class="pix-solution-card__icon pix-solution-card__icon--{{ category.id }}"
                                        ></div>
                                        <h3 class="pix-solution-card__title">
                                            {{ category.name }}
                                        </h3>
                                        <p class="pix-solution-card__description">
                                            {{ category.description }}
                                        </p>
                                    </a>
                                </li>
                            {% endif %}
                        {% endif %}
                    {% endfor %}
                </ul>
                <hr>
            {% elsif portal.current_language.code == 'en' %}
                <ul class="pix-section-card__list">
                    {% for category in portal.solution_categories %}
                        {% if category.folders_count > 0 %}
                            <li>
                                <a class="pix-solution-card" href="{{category.url}}">
                                    <div
                                        class="pix-solution-card__icon pix-solution-card__icon--{{ category.id }}"
                                    ></div>
                                    <h3 class="pix-solution-card__title">
                                        {{ category.name }}
                                    </h3>
                                    <p class="pix-solution-card__description">
                                        {{ category.description }}
                                    </p>
                                </a>
                            </li>
                        {% else %}
                            {{ portal | filler_for_solutions }}
                        {% endif %}
                    {% endfor %}
                </ul>
                <hr>
            {% endif %}
        </nav>
    </section>
{% endif %}
<section class="pix-section-new-ticket__container pix-wrapper">
    {% if portal.current_language.code == 'fr' %}
        <p>
            Vous ne trouvez pas la réponse à votre question ?<br>
            <a
                class="pix-new-ticket"
                href="{{portal.new_ticket_url}}"
                >Vous pouvez nous contacter.</a
            >
        </p>
    {% elsif portal.current_language.code == 'en' %}
        <p>
            Can not find the answer to your question?<br>
            <a class="pix-new-ticket" href="{{portal.new_ticket_url}}">You can contact us.</a>
        </p>
    {% endif %}
</section>
