{% if  portal.current_page != 'csat_survey' %}
  {% if portal.current_page and portal.current_tab == "home" %}
    <header class="pix-banner">
      <div class="pix-banner__brand">
        {{ portal | logo }}
        <div class="pix-banner-brand__splitter"></div>
        <div class="pix-banner-brand__title">Centre d'assistance</div>
      </div>
    </header>
  {% else %}
    <header class="pix-banner pix-banner--fixed">
      <div class="pix-banner__brand">
        <a class="pix-banner-brand__logo" href="/"></a>
        <div class="pix-banner-brand__splitter pix-banner-brand__splitter--black"></div>
        <div class="pix-banner-brand__title pix-banner-brand__title--black">Centre d'assistance</div>
      </div>
      <div class="pix-banner__search-bar">
        {%  snippet search_form %}
      </div>
    </header>
  {% endif %}


  <div class="pix-hero-banner">
    {% if portal.current_tab and portal.current_tab == "home" %}
      <section class="pix-hero-banner__search-bar">
        <div class="hc-search">
          <h2 class="heading hide-in-mobile">Bonjour. Pouvons-nous vous aider ?</h2>
          <div class="hc-search-c">
            {% snippet search_form %}
          </div>
        </div>
      </section>
    {% elsif portal.current_tab == "solutions" %}
      <div class="pix-hero-banner__category">
        <h2 class="pix-hero-banner-category__title">{{ category.name | h}}</h2>
        <p class="pix-hero-banner-category__description">{{ category.description | h}}</p>
      </div>
      <div class="pix-hero-banner__category-nav">
        <ul>
          {% for category in portal.solution_categories %}
            <li>
              {{ category.name | link_to: category.url }}
              <ul class="pix-hero-banner-category-nav__subnav">
                {% for folder in category.folders %}
                  <li>{{ folder | link_to_folder_with_count }}</li>
                {% endfor %}
              </ul>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}

  </div>
  {{ portal.current_tab }}
  {{ portal.current_page }}

{% else %}
  <header class="banner">
    <div class="banner-wrapper">
      <div class="banner-title">
        {{ portal | logo : true }}
        <h1 class="ellipsis heading">{{portal.name|h}}</h1>
      </div>
    </div>
  </header>
{% endif %}
