{% if  portal.current_page != 'csat_survey' %}
  {% if portal.current_page and portal.current_tab == "home" %}
    <header class="pix-app-header">
        <div class="pix-app-header__brand">
            <div class="pix-app-brand">
                {{ portal | logo }}
              <a href="https://support.pix.fr/" class="pix-app-brand__title">Centre d'assistance</a>
            </div>
        </div>
    </header>
  {% else %}
    <header class="pix-app-header pix-app-header--fixed">
      <div class="pix-app-header__brand">
          <div class="pix-app-brand">
              <a class="pix-app-brand__logo" href="/"></a>
              <a href="https://support.pix.fr/" class="pix-app-brand__title pix-app-brand__title--black">Centre d'assistance</a>
          </div>
      </div>
      <div class="pix-app-header__search-bar">
        {%  snippet search_form %}
      </div>
    </header>
  {% endif %}


  <div class="pix-hero-banner">
    {% if portal.current_tab and portal.current_tab == "home" %}
      <section class="pix-hero-banner__search-bar">
        <div class="pix-hero-banner-search-bar">
          <h2 class="pix-hero-banner-search-bar__title">Bonjour. Pouvons-nous vous aider ?</h2>
          <div class="pix-hero-banner-search-bar__input">{% snippet search_form %}</div>
        </div>
      </section>
    {% elsif portal.current_tab == "solutions" %}
      <div class="pix-hero-banner__category">
        <h2 class="pix-hero-banner-category__title">{{ category.name | h}}</h2>
        <p class="pix-hero-banner-category__description">{{ category.description | h}}</p>
      </div>
      <div class="pix-hero-banner__category-nav">
        <ul>
          {% assign categoryName = category.name %}
          {% if portal.current_page == "article_view" %}
            {% assign categoryName = article.category.name %}
          {% endif %}
          {% for category in portal.solution_categories %}
            {% if categoryName == category.name %}
              <li class="active">
            {%  else %}
              <li>
            {%  endif %}
                {{ category.name | link_to: category.url }}
                <ul class="pix-hero-banner-category-nav__subnav">
                  {% for folder in category.folders %}
                    <li><a href="{{ category.url }}#{{ folder.name }}">{{ folder.name }}</a></li>
                  {% endfor %}
                </ul>
              </li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}

  </div>
{% else %}
  <header class="banner">
    <div class="banner-wrapper">
      <div class="banner-title">
        {{ portal | logo : true }}
        <h1 class="ellipsis heading">{{portal.name|h}}</h1>
      </div>
    </div>
  </header>
{% endif %}
